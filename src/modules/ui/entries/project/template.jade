mixin entry-project( author, techno, side )
  div( class="entry-project entry-project--#{side}" )
      .entry-project__part.entry-project__preview
        img.entry-project__preview-img(src="img/entry_default_preview.jpg", alt="")
      .entry-project__part.entry-project__infos
        .entry-project__infos__bg
          .entry-project__infos__bg__deco.entry-project__infos__bg__deco--top
          .entry-project__infos__bg__deco.entry-project__infos__bg__deco--bot
        .entry-project__infos__author= author
        .entry-project__infos__techno= techno
        .entry-project__arrow

