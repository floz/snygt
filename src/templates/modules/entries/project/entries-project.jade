mixin entry-project( author, techno, side )
  a( href="#", class="entry-project entry-project--#{side}", title="" )
    if side == "left"
      +part-preview
      +part-infos( author, techno )
    else
      +part-infos( author, techno )
      +part-preview
    span.entry-project__shadow

mixin part-preview()
  span.entry-project__part.entry-project__preview
    img.entry-project__preview-img(src="img/entry_default_preview.jpg", alt="")

mixin part-infos( author, techno )
  span.entry-project__part.entry-project__infos
    span.entry-project__infos__bg
      span.entry-project__infos__bg__deco.entry-project__infos__bg__deco--top
      span.entry-project__infos__bg__deco.entry-project__infos__bg__deco--bot
    span.entry-project__infos__author= author
    span.entry-project__infos__techno= techno
    span.entry-project__arrow
