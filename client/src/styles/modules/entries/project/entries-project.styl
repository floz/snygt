@import nib

.entry-project
  position relative
  width 725px
  height 280px
  margin 0 auto
  background-color #fff
  overflow hidden
  border-radius( 4px )
  display block
  span
    display block

.entry-project__part
  float left

.entry-project__preview
  position relative
  width 440px
  height 100%
  overflow hidden

.entry-project__infos
  position relative
  width 284px
  height 276px
  color #494c51
  text-align center

.entry-project--left
  .entry-project__infos
    border-left 1px solid rgba( 0, 0, 0, .1 )

.entry-project--right
  .entry-project__infos
    border-right 1px solid rgba( 0, 0, 0, .1 )

.entry-project__infos__bg
  position absolute
  width 100%
  height 100%

.entry-project__infos__bg__deco--top
  position absolute
  left 10px
  top 10px
  background transparent url( "img/project/trame_top_left.png" ) no-repeat
  width 12px
  height 12px

.entry-project__infos__bg__deco--bot
  position absolute
  right 10px
  bottom 10px
  background transparent url( "img/project/trame_bot_right.png" ) no-repeat
  width 12px
  height 12px

.entry-project__infos__author
  position relative
  font normal 16px "geogrotesque_bdbold"
  margin-top 100px

.entry-project__infos__techno
  font normal 16px "geogrotesque_lglight"

.entry-project__arrow
  position relative
  background transparent url( "img/project/arrow.png" ) no-repeat  
  width 16px
  height 15px
  margin 40px auto 0

.entry-project__shadow
  position absolute
  bottom 0
  width 100%
  height 4px
  background-color #000
  opacity( .1 )


// queries

+q-v-large()
  .entry-project
    width 582px
    height 224px
  .entry-project__preview
    width 354px
  .entry-project__infos
    width 226px
    height 220px
  .entry-project__infos__author
    margin-top 75px
  .entry-project__arrow
    margin-top 25px

+q-medium()
  .entry-project
    width 360px
    height 140px
  .entry-project__preview
    width 219px
  .entry-project__infos
    width 140px
    height 136px
  .entry-project__infos__author
    margin-top 35px
  .entry-project__arrow
    margin-top 20px

+q-small()
  .entry-project
    width 320px
    height 140px
  .entry-project__preview
    width 178px
  .entry-project__infos
    width 141px
    height 136px
