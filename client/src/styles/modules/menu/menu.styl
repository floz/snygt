@import nib

.menu
  position relative
  width 100%
  background-color #0f1013
  height 80px
  overflow hidden
  border-top 2px solid #31353d

.menu__entry
  background-color #24272e
  height h = 76px
  float left
  text-align center
  position relative
  a
    position relative
    width 100%
    height 100%
    text-decoration none
    color #fff
    font normal 16px/h "geogrotesque_rgregular"
    text-shadow 0px -2px #040406
  a, span
    display inline-block
  .border
    position absolute
    width 1px
    height 100%
  .border--left
    left 0
    background-color #31353d
  .border--right
    right 0
    background-color #0f1013
  .icon
    position relative
    width 22px
    line-height 0px
    margin-left 20px
    top 5px

.menu__logo
  display none

.menu__infos
  width 20%

.menu__filter
  width 40%  

.icon__line
  display block
  width 100%
  background-color #dbdfdf
  box-shadow( 0px -1px 0px 0px #0f1013 )
  border-radius( 1px )

.icon__line--thin
  height 3px
  margin-bottom 3px

.icon__line--fat
  height 8px
  margin-top 2px
  margin-bottom 1px

.menu--mobile
  display none

.menu
  +mobile-v()
    display none

.menu--mobile
  +mobile-v()
    display block
    .menu__logo
      display block
      width 100%
      line-height 78px
      a
        bg( "menu/logo.png" )
        display inline-block
    .menu__infos
      display none
    .menu__filter
      width 50%
